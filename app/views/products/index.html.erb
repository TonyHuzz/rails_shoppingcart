<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <ul class="list-group">
        <li class="list-group-item">
          類別
          <ul class="list-group">
            <li class="list-group-item">副類別</li>
            <li class="list-group-item">副類別</li>
            <li class="list-group-item">副類別</li>
            <li class="list-group-item">副類別</li>
          </ul>
        </li>
        <li class="list-group-item">
          類別
          <ul class="list-group">
            <li class="list-group-item">副類別</li>
            <li class="list-group-item">副類別</li>
            <li class="list-group-item">副類別</li>
            <li class="list-group-item">副類別</li>
          </ul>
        </li>
      </ul>
    </div>
    <div class="col-xs-9">
      <div class="row">
        <div class="col-xs-12">
          <div class="jumbotron">
            <h1><%= @ad[:title] %></h1>
            <p><%= @ad[:description] %></p>
            <p><a class="btn btn-primary btn-lg" href="#" role="button"><%= @ad[:action_title] %></a></p>
          </div>
        </div>
      </div>
      <div class="row">
        <% @products.each_with_index do |product|  %>
          <div class="col-xs-3">
            <%= render 'products/card/small',  product: product %>  #product: product > 傳product資料庫的值給small頁面
          </div>
        <% end %>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <nav aria-label="Page navigation">
            <ul class="pagination">
              <% if @page > @first_page %>
                <li>
                  <%= link_to root_path(page: (@page - 1))  do %>
                    <span aria-hidden="true">&laquo;</span>
                  <% end %>
              <% end %>
              </li>

              <% (@first_page..@last_page).each do |page_number| %>
                <li><%= link_to page_number, root_path(page:page_number) %></li>
              <% end %>
              <% if @page < @last_page %>
                <li>
                  <%= link_to root_path(page: (@page + 1))  do %>
                    <span aria-hidden="true">&raquo;</span>
                    </a>
                  <% end %>
              <% end %>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>