<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'products/components/side_bar', categories: @categories %>
    </div>
    <div class="col-xs-9">
      <div class="row">
        <div class="col-xs-12">
          <p>類別：<%= @product.subcategory.try(:name_with_category) %> </p>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-3">
          <%= image_tag (@product.image_url.url || "https://via.placeholder.com/360x200"), class: "img-responsive" %>
          <div style="padding: 16px 0px;">
            <p>購買數量</p>
            <select id="quantity_selection" style="width: 100%">
              <option value="1" selected>1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
          </div>
        </div>
        <div class="col-xs-9">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4><%= "#{@product.name}" %></h4>
            </div>
            <div class="panel-body">
              <p><%= @product.description %></p>
              <p><%= "價錢:#{@product.price}" %></p>
            </div>
          </div>
        </div>
      </div>
      <br/>
      <div class="row">
        <div class="col-xs-12">
          <%= form_tag cart_items_path, method: :post do %>
            <%= hidden_field_tag(:product_id, @product.id, id: nil ) %>
            <%= hidden_field_tag(:cart_type, Cart.cart_types[:buy_now], id: nil) %>
            <%= hidden_field_tag(:quantity, 1, id: "quantity") %>
            <button class="btn btn-primary btn-block">
              加入購物車
            </button>
          <% end %>
        </div>
      </div>
      <br/>
      <div class="row">
        <div class="col-xs-12">
          <%= form_tag cart_items_path, method: :post do %>
            <%= hidden_field_tag(:product_id, @product.id, id: nil) %>
            <%= hidden_field_tag(:cart_type, Cart.cart_types[:buy_next_time], id: nil) %>
            <%= hidden_field_tag(:quantity, 1, id: nil) %>
            <button class="btn btn-warning btn-block">
              下次購買
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(function (){
      $("#quantity_selection").change(function (){
          var value = $(this).val();
          $("#quantity").val(value);
      })
  })
</script>